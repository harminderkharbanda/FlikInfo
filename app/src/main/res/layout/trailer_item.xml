<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="@dimen/trailer_iv_size"
        android:layout_height="@dimen/trailer_iv_size"
        android:id="@+id/iv_movie_trailer"
        android:layout_marginRight="@dimen/trailer_margin"
        />
    <ImageView
        android:layout_width="@dimen/play_button_size"
        android:layout_height="@dimen/play_button_size"
        android:src="@drawable/play"
        android:layout_gravity="center"
        />

</FrameLayout>