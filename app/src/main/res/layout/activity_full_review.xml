<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.flikinfo.FullReviewActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_review_full"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/review_tv_margin"
            android:layout_marginEnd="@dimen/review_tv_margin"
            android:layout_marginStart="@dimen/review_tv_margin"
            android:text="@string/review_default_text"
            android:textSize="@dimen/review_text_size"/>

        <TextView
            android:id="@+id/tv_author_full"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/review_tv_margin"
            android:layout_marginRight="@dimen/review_tv_margin"
            android:layout_marginTop="@dimen/review_tv_margin"
            android:textStyle="italic"
            android:text="@string/author_default_text"
            android:layout_gravity="right"
            android:textSize="@dimen/author_text_size"
            android:layout_marginBottom="@dimen/review_tv_margin"
            android:fontFamily="sans-serif-condensed"/>

    </LinearLayout>

</ScrollView>
